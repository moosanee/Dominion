<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dominion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BasicCardsActivity" />
        <activity android:name=".CardCloseUpActivity" />
        <activity android:name=".GameBoardActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".OpponentAreaDialogActivity"
            android:theme="@style/MyDialogTheme" />
        <activity android:name=".ChooseGameCardsActivity" />
        <activity android:name=".IntrigueCardsActivity" />
        <activity android:name=".TrashPileActivity" />
        <activity android:name=".DiscardBrowseActivity" />
        <activity android:name=".DeckBrowseActivity" />
        <activity android:name=".HandBrowseActivity" />
        <activity
            android:name=".RevealDialogActivity"
            android:theme="@style/MyDialogTheme" />
        <activity
            android:name=".NotificationActivity"
            android:theme="@style/MyDialogTheme" />
        <activity android:name=".OpponentPileBrowseActivity"></activity>
    </application>

</manifest>