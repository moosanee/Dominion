<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_opponent_area_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".OpponentAreaDialogActivity"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/opponent_deck"
        android:layout_width="@dimen/card_width_med"
        android:layout_height="@dimen/card_height_med"
        android:src="@drawable/back60"/>

    <android.support.v4.widget.Space
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/opponent_hand"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/card_height_med"
        android:src="@drawable/horizontal_hand60"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.v4.widget.Space
        android:layout_width="30dp"
        android:layout_height="30dp" />


    <ImageView
        android:id="@+id/opponent_discard"
        android:layout_width="@dimen/card_width_med"
        android:layout_height="@dimen/card_height_med"
        android:src="@drawable/back60"/>

    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <Button
        android:id="@+id/exit"
        style="@style/appButton"
        android:text="exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

